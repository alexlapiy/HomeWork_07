<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText,SmallSp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <otus.homework.customview.pie_chart.PieChartView
            android:id="@+id/pieChartView"
            android:layout_width="350dp"
            android:layout_height="350dp"
            app:itemTextColor="@color/black"
            app:itemTextSize="12sp"
            app:pieStrokeWidth="75dp"
            app:textFontFamily="@font/noto_sans_jp_bold"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/restart_pie_chart_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Рестар анимации"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pieChartView" />

        <otus.homework.customview.line_chart.LineChartView
            android:id="@+id/line_graph_view"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:text="16sp"
            android:layout_marginVertical="40dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@+id/restart_pie_chart_animation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
